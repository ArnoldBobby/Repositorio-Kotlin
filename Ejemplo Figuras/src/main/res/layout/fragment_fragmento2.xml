<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="GUIApp.Fragmento1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#61C5BB"
        android:fontFamily="@font/open_sans_light"
        android:text="Calcular un triÃ¡ngulo"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#B3E4E0"
                android:fontFamily="@font/open_sans_light"
                android:text="Tipo"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#3F51B5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#B3E4E0"
                android:fontFamily="@font/open_sans_light"
                android:text="Lado A"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ladoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B0B8E4"
                android:ems="10"
                android:fontFamily="@font/open_sans_light"
                android:hint="Inserte el lado A"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#B3E4E0"
                android:fontFamily="@font/open_sans_light"
                android:text="Lado B"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ladoB"
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:backgroundTint="#B0B8E4"
                android:ems="10"
                android:fontFamily="@font/open_sans_light"
                android:hint="Inserte el lado B"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#B3E4E0"
                android:fontFamily="@font/open_sans_light"
                android:text="Lado C"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ladoC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#B0B8E4"
                android:ems="10"
                android:fontFamily="@font/open_sans_light"
                android:hint="Inserte el lado C"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btm_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    2<TextView
        android:id="@+id/text_Area"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/open_sans_light"
        android:hint="El area es..."
        android:textColorHint="#000000"
        android:textSize="16sp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_Perimetro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/open_sans_light"
        android:hint="El perimetro es.."
        android:textColorHint="#000000"
        android:textSize="16sp"
        tools:visibility="visible" />

    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>